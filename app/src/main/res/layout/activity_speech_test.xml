<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F2FF"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvSpeechTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1-Minute Speech Test"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/tvSpeechDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="When you press Start, talk out loud about your day or anything you like. Try to speak for the whole minute."
        android:textSize="14sp"
        android:textColor="#666666" />

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Time left: 60s"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#7A57C8" />

    <Button
        android:id="@+id/btnStartRecording"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Start recording"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="#6A47C5"
        android:backgroundTint="@null"
        android:padding="12dp" />

    <Button
        android:id="@+id/btnStopRecording"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Stop"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="#6A47C5"
        android:backgroundTint="@null"
        android:padding="12dp" />


    <Button
        android:id="@+id/btnBackSpeech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="16dp"
        android:text="Back to tests"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:background="#6A47C5"
        android:backgroundTint="@null"
        android:padding="12dp" />

</LinearLayout>