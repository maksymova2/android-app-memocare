<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#F8F2FF"
    android:fillViewport="true"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSupportTitleLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Support"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#2B1A4A"
            android:layout_marginBottom="14dp"/>

        <EditText
            android:id="@+id/etSupportTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:singleLine="true"
            android:maxLines="1"
            android:inputType="textCapSentences"
            android:imeOptions="actionNext" />

        <EditText
            android:id="@+id/etSupportMessage"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:hint="Describe your issue"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:gravity="top"
            android:inputType="textMultiLine|textCapSentences"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:scrollbars="vertical" />

        <Button
            android:id="@+id/btnSendTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send"
            android:layout_marginTop="20dp"
            android:background="#6A47C5"
            android:textColor="#FFFFFF"
            android:padding="14dp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnCallSupport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Call Support"
            android:layout_marginTop="12dp"
            android:padding="14dp"
            android:textAllCaps="false" />


    </LinearLayout>

</ScrollView>
